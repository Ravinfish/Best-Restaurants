@{
  Layout = "_Layout";
}

@model BestRestaurants.Models.Restaurant

<h4>Add a restaurant</h4>
@using (Html.BeginForm())
{
  @Html.LabelFor(model => model.Name)
  @Html.TextBoxFor(model => model.Name)
  <br />
  @Html.LabelFor(model => model.Type)
  @Html.TextBoxFor(model => model.Type)
  <br />
  @Html.LabelFor(model => model.Neighborhood)
  @Html.TextBoxFor(model => model.Neighborhood)
  <br />
  @Html.LabelFor(model => model.Notes)
  @Html.TextBoxFor(model => model.Notes)
  <br />
  <input type="submit" value="Add new restaurant" />
}
