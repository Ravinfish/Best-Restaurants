@{
  Layout = "_Layout";
}

@using BestRestaurants.Models;
@model List<BestRestaurants.Models.Restaurant>;
<h1>Restaurant List</h1>

@if (@Model.Count == 0)
{
  <h3>No restaurants have been added yet..</h3>
}
@foreach (Restaurant restaurant in Model)
{
  <h4>@Html.ActionLink($"{restaurant.Name}", "Details", new { id = restaurant.RestaurantId })</h4>
}
<button>@Html.ActionLink("Add new restaurant", "Create")</button>