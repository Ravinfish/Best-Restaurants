@{
  Layout = "_Layout";
}

@using BestRestaurants.Models;
@model List<BestRestaurants.Models.Review>;

<h1>Review List</h1>

@if (@Model.Count == 0)
{
  <h3>No reviews have been added yet...</h3>
}
else
{
@foreach (Review review in Model)
{
  <h4>@Html.ActionLink($"{review.Feedback}", "Details", new { id = review.ReviewId }) | @review.Restaurant.Name</h4>
}
}
<button>@Html.ActionLink("Add new review", "Create")</button>

