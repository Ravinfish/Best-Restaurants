@{
  Layout = "_Layout";
}

@using BestRestaurants.Models;
@model List<BestRestaurants.Models.Cuisine>;
<h1>Cuisine List</h1>

@if (@Model.Count == 0)
{
  <h3>No cuisines have been added yet..</h3>
}
@foreach (Cuisine cuisine in Model)
{
  <h4>@Html.ActionLink($"{cuisine.Name}", "Details", new { id = cuisine.CuisineId })</h4>
}
<button>@Html.ActionLink("Add new cuisine", "Create")</button>